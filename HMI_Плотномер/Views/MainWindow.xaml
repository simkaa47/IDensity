                                    </Grid>
                                </ListBoxItem>
                                <!--#endregion-->
                            </ListBox>
                        </GroupBox>
                        <!--#endregion-->
                    </StackPanel>
                    <!--#endregion-->

                    <!--#region Кнопки управления -->
                    <Grid Grid.Row="1" Grid.Column="1">
